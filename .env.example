# Database (NeonDB avec pooling pour Cloudflare edge)
# IMPORTANT: Utilise le endpoint -pooler pour la web app
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require&connect_timeout=15&pool_timeout=15

# NextAuth v5
AUTH_SECRET=generate-with-openssl-rand-base64-32
AUTH_URL=http://localhost:3000  # Change en prod: https://ton-domaine.pages.dev
AUTH_DISCORD_ID=your-discord-app-client-id
AUTH_DISCORD_SECRET=your-discord-app-client-secret

# Discord Bot (VPS/Railway only)
DISCORD_TOKEN=your-bot-token
DISCORD_CLIENT_ID=your-discord-app-client-id
DISCORD_GUILD_ID=your-discord-server-id
